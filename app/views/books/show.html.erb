
<div class="container"> <!-- ここを追加 -->
<div class="row">
      	

<div class="col-md-3">
<%= render 'layouts/layouts', user: @user ,book: @booknew %>
</div>
<div class="col-md-9"> 	
	<h2>Book detail</h2>
	<table class="table">
		<tbody>
			<tr>
				<td>
					<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			<br>
			<br>
			<br>
			<br>
				<%= link_to @book.user.name,user_path(@book.user_id) %>
			</td>
			<td>
				<%= link_to @book.title ,book_path %>
			</td>
			<td>
				<%= @book.body %>
			</td>
			<td>

				<% if current_user.id == @book.user_id %>
				<button class="btn btn-success"><%= link_to "Edit", edit_book_path(@book) %></button>
			</td>
			<td>
				<button class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete ,"data-confirm" => "本当に消しますか？" %></button>
				<% end %>
			</td>
			
		</tr>
	</table>
</div>
</div>
</div>
</div>
