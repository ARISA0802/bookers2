
<div class="container"> <!-- ここを追加 -->
<div class="row">
      	

<div class="col-md-3">

	<h1>user info</h1>

<div class="profile-container">
   
    <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    
     <h3 class="profile-name">name <%= @book.user.name %></h3>
     <h3 class="introduction">introduction <%= @book.user.introduction %></h3>
	<% if @book.user.id == current_user.id %>
     <%= link_to "プロフィール編集", edit_user_path(@book.user), class: "pull-right" %>
    <% end %>
</div>

<h1>New book </h1>

<div>
	<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<p><%= f.submit'Create Book' %></p>

	<% end %>
</div>


</div>

<div class="col-md-9"> 	
	<h2>Book detail</h2>
	<table class="table">
		<tbody>
			<tr>
				<td>
					<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			<br>
			<br>
			<br>
			<br>
				<%= link_to @book.user.name,user_path(@book.user_id) %>
			</td>
			<td>
				<%= link_to @book.title ,book_path %>
			</td>
			<td>
				<%= @book.body %>
			</td>
			<td>

				<% if current_user.id == @book.user_id %>
				<button class="btn btn-success"><%= link_to "Edit", edit_book_path(@book) %></button>
			</td>
			<td>
				<button class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete ,"data-confirm" => "本当に消しますか？" %></button>
				<% end %>
			</td>
			
		</tr>
	</table>
</div>
</div>
</div>
</div>
