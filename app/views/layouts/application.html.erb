<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>


  <body>
    <header>
      <hgroup>
        <h>Bookers</h>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li>
            <%=link_to "Home",user_path(current_user),class: "glyphicon glyphicon-home" %>
            </li>
            <li>
            <%=link_to "Users",users_path,class: "glyphicon glyphicon-user" %></li>
            <li>
            <%= link_to "Book",books_path,class: "glyphicon glyphicon-book " %></li>
            <li>
            <%= link_to "log out",destroy_user_session_path,method: :delete,class: "glyphicon glyphicon-log-out" %>
            </li>

          <% else %>
            <li>
              <%= link_to "Home" ,root_path,class: "glyphicon glyphicon-home" %>
            </li>
            <li>
              <%= link_to "about" , home_about_path,class: "glyphicon glyphicon-link" %>
            </li>
            <li>
              <%= link_to "sign up" ,new_user_registration_path,class: "glyphicon glyphicon-edit" %>
            </li>
            <li>
              <%= link_to "login" , new_user_session_path,class: "glyphicon glyphicon-log-in" %>
            </li>
          </ul>
        <% end %>
      </hgroup>
    </header>
    
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>

    <%= yield %>

    <footer>
      <div class="container"> <!-- ここを追加 -->
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <P>CopyRight Infratop.inc</P>
          </div>
        </div>
      </div>
    </footer>
  </body>  
</html>









