<h1>User info</h1>

<div class="profile-container"> 
   		<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    	<table class="table">
    		<tbody>
    			<tr></tr>
    			<tr>
    				<td>
    				<h4 class="profile-name">name</h4>
    			    <%= user.name %>
    				</td>
				</tr>
				<tr>
					<td>
					<h4 class="profile-introduction">introduction<%= user.introduction %></h4>
 						
							<% if user.id == current_user.id %>
							<%= link_to edit_user_path(user.id) do %>	
						<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
							</button><% end %>
							<% else %>
							<%= link_to user_path(current_user.id) do %>	
						<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
							</button><% end %>	
					<% end %>
				</td>
        		</tr>
    			
			</tbody>
		</table>
</div>

    <h1>New book </h1>

<%= form_for(book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<p>
		<%= f.submit'Create Book' %></p>
<% end %>
