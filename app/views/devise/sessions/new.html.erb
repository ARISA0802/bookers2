<h2>Log in</h2>

 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputEmail">Name</label><p>
      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"Name"%></p>
      <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputPassword">Password</label><p>
      <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %></p>
       
      <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
    </div>
    <%= f.submit "Log in", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %> 
  </div>
  <%= render "devise/shared/links" %>
