<div class="container"> <!-- ここを追加 -->
	<div class="row">
		<div class="col-md-3">
			<%= render 'layouts/layouts', user: @user,book: @book %>
		</div>
		<div class="col-md-9">
			<h1>Users</h1>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				</tr> 
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "Show",user_path(user.id) %>
					</td>
				</tr>
				<% end %>

			</tbody>
			

			



		</table>
		</div>
	</div>
</div>